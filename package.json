{
	"name": "obsidian-local-whisper",
	"version": "0.1.5",
	"description": "Local speech-to-text transcription plugin for Obsidian using Whisper AI",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"postversion": "npm run build && git add main.js && git commit --amend --no-edit && git push --follow-tags",
		"lint": "eslint .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"speech-to-text",
		"whisper",
		"transcription",
		"local-ai"
	],
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "9.30.1",
		"@types/node": "^16.11.6",
		"@vitest/ui": "^4.0.18",
		"esbuild": "0.25.5",
		"eslint-plugin-obsidianmd": "0.1.9",
		"globals": "14.0.0",
		"happy-dom": "^20.7.0",
		"jiti": "2.6.1",
		"tslib": "2.4.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "8.35.1",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"@huggingface/transformers": "^3.8.1",
		"obsidian": "latest"
	}
}
